{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go-task",
            "args": [
                "build",
                "--",
                "${fileBasename}",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                },
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "label": "run",
            "type": "shell",
            "command": "go-task",
            "args": [
                "run",
                "--",
                "${fileBasename}",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                },
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
        }
    ]
}